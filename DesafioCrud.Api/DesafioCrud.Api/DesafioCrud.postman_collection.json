    {
      "name": "3. Criar Contato - João Silva",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    var jsonData = pm.response.json();",
              "    pm.environment.set(\"contatoId\", jsonData.idPessoa);",
              "    pm.test(\"Contato criado com sucesso\", function () {",
              "        pm.response.to.have.status(201);",
              "    });",
              "    pm.test(\"ID foi gerado\", function () {",
              "        pm.expect(jsonData.idPessoa).to.be.above(0);",
              "    });",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nome\": \"João Silva\",\n  \"dataNasc\": \"1990-05-15\",\n  \"telefone\": \"+55 11 98765-4321\",\n  \"email\": \"joao.silva@email.com\",\n  \"obs\": \"Cliente VIP - Primeiro contato de teste\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/contatos",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contatos"]
        },
        "description": "Cria o primeiro contato e salva o ID na variável de ambiente"
